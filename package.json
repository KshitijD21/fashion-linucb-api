{
  "name": "fashion-linucb-api",
  "version": "1.0.0",
  "description": "Fashion Recommendation System API using LinUCB Contextual Bandit Algorithm",
  "type": "module",
  "main": "dist/server.js",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "npm run build && npm start",
    "dev": "ts-node server.ts",
    "dev:watch": "ts-node --watch server.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .js,.ts,.json",
    "lint:fix": "eslint . --ext .js,.ts,.json --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf node_modules dist coverage",
    "seed": "node utils/seedDatabase.js",
    "precommit": "lint-staged"
  },
  "keywords": [
    "fashion",
    "recommendation",
    "linucb",
    "contextual-bandit",
    "machine-learning",
    "api",
    "express",
    "mongodb",
    "hackathon"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "lodash": "^4.17.21",
    "mathjs": "^12.0.0",
    "ml-matrix": "^6.12.1",
    "moment": "^2.29.4",
    "mongodb": "^6.20.0",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.5.2",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vitest": "^1.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/fashion-linucb-api.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/fashion-linucb-api/issues"
  },
  "homepage": "https://github.com/yourusername/fashion-linucb-api#readme"
}
